<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.omnitask.controller.TaskOverviewController">
    <children>
        <SplitPane dividerPositions="0.4" layoutX="14.0" layoutY="14.0" prefHeight="600.0" prefWidth="800.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <items>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                    <children>
                        <TableView fx:id="taskTable" layoutY="14.0" prefHeight="598.0" prefWidth="317.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <columns>
                                <TableColumn fx:id="colTitle" prefWidth="150.0" text="Judul Tugas" />
                                <TableColumn fx:id="colStatus" prefWidth="85.0" text="Status" />
                                <TableColumn fx:id="colDueDate" prefWidth="80.0" text="Deadline" /z>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </AnchorPane>

                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                    <children>
                        <VBox layoutX="14.0" layoutY="14.0" spacing="10.0" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="14.0">
                            <children>
                                <Label text="Detail Tugas" textFill="#2c3e50">
                                    <font>
                                        <Font name="System Bold" size="24.0" />
                                    </font>
                                </Label>
                                <Label fx:id="lblTitle" text="Pilih tugas di tabel..." wrapText="true">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                </Label>

                                <HBox spacing="10">
                                    <Label text="Deadline:" style="-fx-font-weight: bold;" />
                                    <Label fx:id="lblDueDate" text="-" />
                                    <Label text=" | Status:" style="-fx-font-weight: bold;" />
                                    <Label fx:id="lblStatus" text="-" />
                                </HBox>

                                <Label text="Deskripsi:" style="-fx-font-weight: bold;" />
                                <TextArea fx:id="txtDescription" editable="false" prefHeight="80.0" wrapText="true" style="-fx-background-color: #f4f4f4;" />

                                <Label text="Progress Kerja:" style="-fx-font-weight: bold;" />
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Slider fx:id="sliderProgress" prefWidth="300.0" showTickLabels="true" showTickMarks="true" />
                                        <Label fx:id="lblProgressPercent" text="0%">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </HBox>
                                <Button fx:id="btnUpdateProgress" disable="true" mnemonicParsing="false" onAction="#handleUpdateProgress" text="Simpan Progress" style="-fx-background-color: #3498db; -fx-text-fill: white;" />

                                <Label text="Riwayat Catatan Harian:" style="-fx-font-weight: bold;" />
                                <TextArea fx:id="txtDailyNotes" editable="false" prefHeight="150.0" wrapText="true" />
                                <Button fx:id="btnAddNote" disable="true" mnemonicParsing="false" onAction="#handleAddNote" text="Tambah Catatan Harian (+)" />

                            </children>
                        </VBox>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </children>
</AnchorPane>