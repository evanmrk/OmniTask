<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.omnitask.controller.AttendanceController">

    <VBox fx:id="paneLogin" alignment="CENTER" maxHeight="350" maxWidth="400" spacing="20" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 0);">
        <padding>
            <Insets bottom="30" left="30" right="30" top="30" />
        </padding>
        
        <Label text="OmniTask Login" textFill="#5c1a1b">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        
        <Label text="Silakan masukkan ID Karyawan" textFill="#666666" />
        
        <TextField fx:id="txtInputId" promptText="Contoh: EMP-A1B2C" style="-fx-font-size: 14px; -fx-padding: 10; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5;" />
        
        <Button onAction="#handleLogin" style="-fx-background-color: #5c1a1b; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 10 20; -fx-cursor: hand;" text="MASUK SISTEM" />
        
        <Label fx:id="lblError" text="" textFill="RED" />

        <Separator maxWidth="200" />
        <HBox alignment="CENTER" spacing="5">
            <Label text="Belum punya ID?" textFill="#666666" />
            <Hyperlink onAction="#handleGoToRegister" style="-fx-text-fill: #5c1a1b; -fx-font-weight: bold; -fx-underline: true;" text="Daftar Baru" />
        </HBox>
    </VBox>


    <BorderPane fx:id="paneDashboard" visible="false">
        
        <top>
            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #5c1a1b;">
                <padding>
                    <Insets bottom="15" left="20" right="20" top="15" />
                </padding>

                <Label text="OmniTask" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="24" />
                    </font>
                </Label>

                <Region HBox.hgrow="ALWAYS" />

                <VBox alignment="CENTER_RIGHT">
                    <Label fx:id="lblName" text="Nama Karyawan" textFill="WHITE">
                        <font>
                            <Font size="16" />
                        </font>
                    </Label>
                    <Button onAction="#handleLogout" style="-fx-background-color: transparent; -fx-text-fill: #ffcccc; -fx-underline: true; -fx-cursor: hand;" text="(Logout)" />
                </VBox>
            </HBox>
        </top>

        <center>
            <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color: transparent;">
                <VBox spacing="20" style="-fx-background-color: #EFF7FA;">
                    <padding>
                        <Insets bottom="30" left="30" right="30" top="30" />
                    </padding>

                    <HBox spacing="20">
                        <VBox alignment="CENTER" minWidth="200" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0); -fx-background-radius: 10;">
                            <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
                            <Label style="-fx-font-weight: bold;" text="Foto Profil" />
                            <ImageView fx:id="imgProfile" fitHeight="150" fitWidth="150" preserveRatio="true" />
                        </VBox>

                        <VBox style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0); -fx-background-radius: 10;" HBox.hgrow="ALWAYS">
                            <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>
                            <Label text="Target / Tugas Hari Ini" textFill="#5c1a1b">
                                <font><Font name="System Bold" size="18" /></font>
                            </Label>
                            <Separator />
                            <Label fx:id="lblTarget" style="-fx-font-size: 14px; -fx-padding: 10 0 0 0;" text="Loading..." wrapText="true" />
                        </VBox>
                    </HBox>

                    <HBox spacing="20">
                        
                        <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);" HBox.hgrow="ALWAYS">
                            <padding>
                                <Insets bottom="20" left="20" right="20" top="20" />
                            </padding>

                            <Label text="Lokasi dan Status">
                                <font>
                                    <Font name="System Bold" size="18" />
                                </font>
                            </Label>
                            
                            <Label fx:id="lblLocationStatus" style="-fx-font-size: 14px;" text="Mengecek Lokasi..." />
                            <Label fx:id="lblResult" style="-fx-font-weight: bold;" text="" wrapText="true" />
                        </VBox>

                        <VBox alignment="CENTER" minWidth="200" spacing="10">
                             <Button fx:id="btnCheckIn" disable="true" onAction="#handleCheckIn" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-pref-width: 200; -fx-padding: 15;" text="âœ“ CLOCK IN" />
                             
                             <Button fx:id="btnCheckOut" disable="true" onAction="#handleCheckOut" style="-fx-background-color: #d9534f; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-pref-width: 200; -fx-padding: 15;" text="âœ— CHECK OUT" />
                        </VBox>

                    </HBox>

                </VBox>
            </ScrollPane>
        </center>

        <bottom>
            <HBox alignment="CENTER" spacing="10" style="-fx-background-color: #ddd;">
                <padding>
                    <Insets bottom="10" left="20" right="20" top="10" />
                </padding>
                <Button style="-fx-background-color: #5c1a1b; -fx-text-fill: white;" text="ðŸ  Attendance" />
                <Button text="ðŸ“‹ Tasks" />
                <Button text="ðŸ“ Leave Request" />
                <Button text="ðŸ“Š Dashboard" />
            </HBox>
        </bottom>

    </BorderPane>

</StackPane>