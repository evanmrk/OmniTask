<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.omnitask.controller.RegisterController"
      alignment="CENTER" spacing="15" style="-fx-padding: 20; -fx-background-color: #fff;">

    <Label text="FORM REGISTRASI KARYAWAN" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #5c1a1b;"/>
    <Separator/>

    <VBox spacing="5" maxWidth="300" alignment="CENTER_LEFT">
        <Label text="Employee ID (Auto-Generated):" style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
        <TextField fx:id="txtId" promptText="ID Otomatis" disable="true"
                   style="-fx-opacity: 1; -fx-background-color: #e0e0e0; -fx-font-weight: bold; -fx-text-fill: black;"/>
    </VBox>

    <VBox spacing="5" maxWidth="300" alignment="CENTER_LEFT">
        <Label text="Nama Lengkap:" style="-fx-font-size: 12px;"/>
        <TextField fx:id="txtName" promptText="Masukkan Nama Lengkap" maxWidth="300"/>
    </VBox>

    <VBox alignment="CENTER" spacing="10" style="-fx-padding: 10; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-border-style: dashed;">
        <ImageView fx:id="imgPreview" fitWidth="120" fitHeight="120" preserveRatio="true"/>
        <Button text="ðŸ“‚ Pilih Foto Profil..." onAction="#handleBrowse"/>
    </VBox>

    <Label fx:id="lblStatus" text="" style="-fx-font-size: 11px;"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="SIMPAN DATA" onAction="#handleSave"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>

        <Button text="Tutup" onAction="#handleClose"
                style="-fx-background-color: #ddd; -fx-text-fill: black; -fx-cursor: hand;"/>
    </HBox>

</VBox>