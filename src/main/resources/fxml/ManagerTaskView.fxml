<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.omnitask.controller.ManagerTaskController">

    <HBox alignment="CENTER_LEFT" spacing="10">
        <VBox>
            <Label text="Manajemen Tugas Karyawan" textFill="#5c1a1b">
                <font><Font name="System Bold" size="18.0" /></font>
            </Label>
            <Label fx:id="lblEmployeeName" text="Nama Karyawan" textFill="#666" />
        </VBox>
        <Region HBox.hgrow="ALWAYS" />
        <Button onAction="#handleRefresh" text="ðŸ”„ Refresh" />
    </HBox>

    <Separator />

    <TableView fx:id="tableTasks" VBox.vgrow="ALWAYS" prefHeight="300" prefWidth="600">
        <columns>
            <TableColumn fx:id="colTitle" prefWidth="180" text="Judul Tugas" />
            <TableColumn fx:id="colDesc" prefWidth="200" text="Deskripsi" />
            <TableColumn fx:id="colStatus" prefWidth="100" text="Status" />
            <TableColumn fx:id="colProgress" prefWidth="80" text="Progress (%)" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
        <placeholder>
            <Label text="Karyawan ini belum memiliki tugas." />
        </placeholder>
    </TableView>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button onAction="#handleAddTask" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold;" text="+ Tambah Tugas Baru" />
        <Button onAction="#handleDeleteTask" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold;" text="ðŸ—‘ Hapus Tugas Terpilih" />
        <Button onAction="#handleClose" text="Tutup" />
    </HBox>

</VBox>